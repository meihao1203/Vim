vim  ~/.bashrc
最后一行添加代码  export PS1="\[\e[32;1m\][\u@\h \w\a]$>\[\e[0m\]"   退出保存
vim ~/.vimrc
set number
set dictionary +=/usr/include
set ts=4
syntax on
set hlsearch
set cursorline
set fileencodings=ucs-bom,utf-8,GB18030,gbk 
filetype on
set autoindent    
set showmatch
set binary
set noendofline
set shiftwidth=4  

